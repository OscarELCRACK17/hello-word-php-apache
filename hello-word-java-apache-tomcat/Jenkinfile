pipeline {
    agent any

    stages {
        stage('Test Junit') {
            steps {
                sh 'sudo mvn clean test'
            }
        }
        stage('Build') {
            steps {
                sh 'sudo mvn clean package'
            }
        }
        stage('Deploy') {
            steps {
                sh 'sudo docker run -p 80:80 hello-word-java-tomcat'
            }
        }
        stage('Test Integration') {
            steps {
                sh 'wget -m localhost:8082'
            }
        }
    }
}
